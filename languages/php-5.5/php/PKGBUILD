pkgname=php
pkgver=5.5.0RC3
pkgrel=1
arch=('i686' 'x86_64')
license=('PHP')
url='http://www.php.net'
makedepends=()
source=("http://downloads.php.net/dsp/${pkgname}-${pkgver}.tar.bz2")
md5sums=('338b25d3cdd907116896aef47eb40cba')

build() {
    local _phpconfig="--srcdir=../${pkgname}-${pkgver} \
		--config-cache \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--sysconfdir=/etc/php \
		--localstatedir=/var \
		--with-layout=GNU \
		--with-config-file-path=/etc/php \
		--with-config-file-scan-dir=/etc/php/conf.d \
		--disable-rpath \
		--mandir=/usr/share/man \
        --disable-all"

	cd ${srcdir}/${pkgname}-${pkgver}

	# php
	mkdir ${srcdir}/build-php
	cd ${srcdir}/build-php
	ln -s ../${pkgname}-${pkgver}/configure
	./configure ${_phpconfig}
	make
}

package() {
	pkgdesc='An HTML-embedded scripting language'
	depends=('pcre' 'bzip2')
	backup=('etc/php/php.ini')

	cd ${srcdir}/build-php
	make -j1 INSTALL_ROOT=${pkgdir} install
	install -D -m644 ${srcdir}/${pkgname}-${pkgver}/php.ini-production ${pkgdir}/etc/php/php.ini
	install -d -m755 ${pkgdir}/etc/php/conf.d/

	# remove empty directory
	rmdir ${pkgdir}/usr/include/php/include
}
